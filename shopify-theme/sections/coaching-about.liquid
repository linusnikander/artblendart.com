<div class="page-width section-{{ section.id }}-padding">
  <div class="coaching-about" style="max-width: 48rem; margin: 0 auto; padding: 1.5rem;">

    {%- comment -%} Page Header {%- endcomment -%}
    <div style="text-align: center; padding: 4rem 1.5rem;">
      <h1 style="font-size: 2.5rem; font-weight: 300; margin-bottom: 4rem; line-height: 1.2;">
        {{ section.settings.page_title }}
      </h1>
    </div>

    {%- comment -%} About Section {%- endcomment -%}
    <div style="display: grid; grid-template-columns: 1fr; gap: 3rem; padding: 2rem 1.5rem;">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 3rem; align-items: start;">
        <div>
          <h2 style="font-size: 1.875rem; font-weight: 300; margin-bottom: 1.5rem;">
            {{ section.settings.about_heading }}
          </h2>

          <div style="line-height: 1.75; color: #4a5568;">
            {{ section.settings.about_content }}
          </div>

          <p style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; color: #718096; margin-top: 1.5rem;">
            <span style="color: #f56565;">üìç</span>
            {{ section.settings.location_note }}
          </p>
        </div>

        <div style="margin-top: 4rem;">
          {% if section.settings.image %}
            <img
              src="{{ section.settings.image | img_url: '800x' }}"
              alt="{{ section.settings.image.alt | escape }}"
              style="width: 100%; aspect-ratio: 3/4; object-fit: cover; border-radius: 0.5rem;"
              loading="lazy"
            >
          {% else %}
            <div style="background: #e2e8f0; aspect-ratio: 3/4; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; color: #a0aec0;">
              <span style="font-size: 0.875rem;">[Image: Therese in nature]</span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    {%- comment -%} How It Works Section {%- endcomment -%}
    <div style="padding: 4rem 1.5rem;">
      <h2 style="font-size: 1.875rem; font-weight: 300; margin-bottom: 2rem;">
        {{ section.settings.process_heading }}
      </h2>

      <div style="line-height: 1.75; color: #4a5568;">
        {{ section.settings.process_content }}
      </div>

      <div style="background: #f7fafc; padding: 1.5rem; border-radius: 0.5rem; margin: 2rem 0;">
        <h3 style="font-size: 1.25rem; font-weight: 300; margin-bottom: 1rem;">
          {{ section.settings.first_session_heading }}
        </h3>
        <p style="color: #4a5568;">
          {{ section.settings.first_session_content }}
        </p>
      </div>

      <div style="line-height: 1.75; color: #4a5568;">
        {{ section.settings.process_content_2 }}
      </div>
    </div>

    {%- comment -%} CTA {%- endcomment -%}
    <div style="text-align: center; padding: 3rem 1.5rem;">
      <a
        href="{{ section.settings.cta_link }}"
        style="display: inline-block; background: #000; color: #fff; padding: 0.75rem 2rem; border-radius: 0.25rem; text-decoration: none; transition: background 0.2s;"
      >
        {{ section.settings.cta_button_text }}
      </a>
    </div>

  </div>
</div>

