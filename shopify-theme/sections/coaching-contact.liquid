<style>
  .coaching-heading {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: left;
    line-height: 1.2;
  }

  .coaching-paragraph {
    margin-bottom: 1rem;
    line-height: 1.75;
    text-align: left;
    color: #000;
  }
</style>

<div class="page-width section-{{ section.id }}-padding" id="contact" style="background-color: #e0d0f2;">
  <div class="coaching-contact" style="max-width: 900px; margin: 0 auto; padding: 1.5rem;">

    {%- comment -%} CTA Section {%- endcomment -%}
    <div style="padding: 2rem 1.5rem 1rem 1.5rem;">
      <h3 class="coaching-heading">{{ section.settings.cta_heading }}</h3>
    </div>

    <div style="padding: 1rem 1.5rem;">
      <div>
        <p class="coaching-paragraph">{{ section.settings.cta_text }}</p>
        <p class="coaching-paragraph">{{ section.settings.cta_text_2 }}</p>
        <p class="coaching-paragraph" style="margin-bottom: 2rem;">{{ section.settings.cta_text_3 }}</p>
      </div>
    </div>

    {%- comment -%} Creative Collage Image {%- endcomment -%}
    <div style="padding: 0 1.5rem 2rem 1.5rem;">
      <img
        src="{{ 'coaching-creative-collage.jpg' | asset_url }}"
        alt="Creative coaching collage"
        style="width: 100%; height: auto;"
        loading="lazy"
      >
    </div>

    {%- comment -%} Page Header {%- endcomment -%}
    <div style="padding: 2rem 1.5rem 1rem 1.5rem;">
      <h2 class="coaching-heading">
        {{ section.settings.page_title }}
      </h2>
      <p class="coaching-paragraph">
        {{ section.settings.page_subtitle }}
      </p>
    </div>

    {%- comment -%} Two-column layout: Form on left, Info on right {%- endcomment -%}
    <div style="padding: 2rem 1.5rem;">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start;">

        {%- comment -%} Calendly Booking Widget {%- endcomment -%}
        <div>
          <!-- Calendly inline widget begin -->
          <div class="calendly-inline-widget" data-url="https://calendly.com/artblendart-info/30min?hide_event_type_details=1&hide_gdpr_banner=1" style="min-width:320px;height:700px;border-radius:0.5rem;overflow:hidden;"></div>
          <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
          <!-- Calendly inline widget end -->

          <div style="margin-top: 2rem; text-align: center; font-size: 1.425rem; color: #718096;">
            <p>
              Du kan också nå mig direkt på
              <a href="mailto:{{ section.settings.contact_email }}" style="text-decoration: underline; color: #2d3748;">
                {{ section.settings.contact_email }}
              </a>
            </p>
          </div>
        </div>

        {%- comment -%} Info Section - "Vad händer sen?" {%- endcomment -%}
        <div>
          <h3 class="coaching-heading" style="font-size: 2.25rem; margin-bottom: 1.5rem;">
            {{ section.settings.process_heading }}
          </h3>
          <div style="display: flex; flex-direction: column; gap: 1.75rem; color: #000;">
            {% for block in section.blocks %}
              {% if block.type == 'process_step' %}
                <div style="display: flex; gap: 1rem;">
                  <span style="flex-shrink: 0; width: 3.75rem; height: 3.75rem; background: #e2e8f0; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 500;">
                    {{ forloop.index }}
                  </span>
                  <div>
                    <p class="coaching-paragraph" style="font-weight: 500; font-size: 1.65rem; margin-bottom: 0.5rem; line-height: 1.5;">{{ block.settings.step_title }}</p>
                    <p class="coaching-paragraph" style="font-size: 1.5rem; line-height: 1.6;">{{ block.settings.step_description }}</p>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Coaching Contact",
  "settings": [
    {
      "type": "text",
      "id": "cta_heading",
      "label": "CTA Heading",
      "default": "Välkommen till ett rum där kreativitet, utveckling och mening får mötas"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Den här coachingen är för dig som vill utforska, utvecklas och våga skapa på riktigt – på ditt eget sätt."
    },
    {
      "type": "text",
      "id": "cta_text_2",
      "label": "CTA Text 2",
      "default": "Du behöver inte ha ett mål att prestera, bara en vilja att vara nyfiken och närvarande i din process."
    },
    {
      "type": "textarea",
      "id": "cta_text_3",
      "label": "CTA Text 3",
      "default": "Tillsammans utforskar vi hur ditt skapande kan bli ett levande samtal mellan dig och världen – där varje steg, varje idé och varje tvekan kan bli en del av något större."
    },
    {
      "type": "text",
      "id": "page_title",
      "label": "Page Title",
      "default": "Boka ditt samtal"
    },
    {
      "type": "text",
      "id": "page_subtitle",
      "label": "Page Subtitle",
      "default": "Första steget är en gratis 15-minuters avstämning där vi känner av hur det känns att arbeta tillsammans."
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email",
      "default": "coaching@artblendart.com"
    },
    {
      "type": "text",
      "id": "process_heading",
      "label": "Process Heading",
      "default": "Vad händer sen?"
    }
  ],
  "blocks": [
    {
      "type": "process_step",
      "name": "Process Step",
      "settings": [
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title",
          "default": "Jag hör av mig inom 1-2 dagar"
        },
        {
          "type": "text",
          "id": "step_description",
          "label": "Step Description",
          "default": "Vi bokar in ett 15-minuters samtal på Teams eller telefon"
        }
      ]
    }
  ],
  "presets": [
    {
